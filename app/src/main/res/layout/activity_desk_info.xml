<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.polkapolka.bluetooth.le.deskInfo">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zitten (bureau): Probeer recht te zitten en tegelijk de natuurlijke krommingen in uw rug te behouden. Zit met uw beide voeten gesteund op de grond (niet met benen over elkaar!). Een hoek van 90 graden in heup, knie, enkel is optimaal.  Uiteraard wil u af en toe uw houding wat veranderen, en dat is prima. Gebruik deze houdingsveranderingen als een pauze voor uw spieren, en let erop om niet langdurig met doorgezakte (gebogen) rug te zitten. "
        android:textSize="15sp"
        android:paddingBottom="10dp" >

        </TextView>
</LinearLayout>

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/deskapp"/>

</LinearLayout>

</RelativeLayout>
